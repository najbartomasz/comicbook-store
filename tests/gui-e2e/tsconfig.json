{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "../../dist/out-tsc",
        "sourceMap": false,
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./",
        "paths": {
            "@test": [
                "./framework/test/index.ts"
            ],
            "@page-object": [
                "./framework/page-objects/index.ts"
            ]
        }
    },
    "references": [
        {
            "path": "../../libs/testing/tsconfig.json"
        }
    ],
    "include": [
        "**/*.ts",
        "**/*.js",
        "playwright.config.ts",
        "src/**/*.spec.ts",
        "src/**/*.spec.js",
        "src/**/*.test.ts",
        "src/**/*.test.js",
        "src/**/*.d.ts",
        "../../libs/testing/e2e/page-object/heading/heading.ts",
        "../../libs/testing/e2e/page-object/heading/heading.verifier.ts",
        "../../libs/testing/e2e/page-object/heading/index.ts"
    ]
}
